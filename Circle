public class Circle {
    private double radius;
    public Circle() {
        this.radius = 0;
    }
    public Circle(double radius) {
        this.radius = radius;
    }
    public double calculateArea() {
        return Math.PI * radius * radius;
    }
    public double calculateCircumference() {
        return 2 * Math.PI * radius;
    }
    public static void main(String[] args) {
        Circle circle = new Circle();
        circle.radius = 7;
        System.out.println("Area of the circle with radius 7: " + circle.calculateArea());
        System.out.println("Circumference of the circle with radius 7: " + circle.calculateCircumference());
    }
}
